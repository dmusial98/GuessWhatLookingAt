<UserControl x:Class="GuessWhatLookingAt.FreezeGameUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:cmd="http://www.galasoft.ch/mvvmlight"
             xmlns:local="clr-namespace:GuessWhatLookingAt"
             mc:Ignorable="d" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <Canvas Name="WindowContentXAML" ClipToBounds="True" Grid.ColumnSpan="2" Margin="0,0,-1900,-1060">
            <Image Name="PupilImageXAML" Canvas.Left="0" Canvas.Top="0" Source="{Binding Path=imageFromPupil, 
                UpdateSourceTrigger=PropertyChanged}" />
            <Button Name="TakeAPhoto" Width="auto" Height="auto" Canvas.Left="838" Canvas.Top="935" 
                    Content="Take a photo" FontSize="35" Command="{Binding TakePhoto}"/>
            <Button Name="ConnectPupilButton" Width="auto" Height="auto" FontSize="35"
                Canvas.Left="65" Canvas.Top="935" Content="Connect"  Command="{Binding ConnectWithPupil}"/>
            <Button Name="DisconnectPupilButton" Width="auto" Height="auto" Canvas.Left="576" 
                    Canvas.Top="935" FontSize="35" Content="Disconnect" Command="{Binding DisconnectPupil}" />
            <Button Content="Go to main menu" Canvas.Left="1636" Canvas.Top="10" Command="{Binding GoToMainMenu}"
            Width="auto" Height="auto" FontSize="35"/>
            <Label Name="ConnectPupilResultLabel" Canvas.Left="220" Canvas.Top="935" FontSize="25"  
                   Content="{Binding Path=ConnectPupilResultString, UpdateSourceTrigger=PropertyChanged}" />
            <Label Name="CoordinatesLabel" Width="auto" Height="auto" FontSize="50" Canvas.Left="900" Canvas.Top="830"
                   Content="{Binding Path=CoordinatesMouseString, UpdateSourceTrigger=PropertyChanged}" />
            <Label Name="RemainingPhotoTimeLabel" Width="auto" Height="auto" Canvas.Left="1140" Canvas.Top="935" FontSize="35" 
                   Content="{Binding Path=RemainingPhotoTimeString, UpdateSourceTrigger=PropertyChanged}"/>
        </Canvas>
    </Grid>
</UserControl>
